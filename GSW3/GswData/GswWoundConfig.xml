<?xml version="1.0" encoding="utf-8"?>
<GswWoundConfig.xml>
	<!-- Here you can set every Wound that will used by GSW3 -->
	<WoundList>
		<Wound>
			<!-- That's unique ID of Wound, that let you reference to wound in CritWoundList of BodyPart or WeaponWoundList -->
			<Uid Value="GRAZE_GSW"/>
			<!-- LocalizationKey needed for Localization in future, 
            currently this key will used in wound notifications and console -->
			<LocalizationKey Key="GRAZE_GSW"/>
			<!-- You can skip any of next nodes for your wound -->
			<!-- BaseDamage is how many Damage wound deal to ped, it will multiply with DamageMult of Weapon and BodyPart -->
			<BaseDamage Value="5"/>
			<!-- BasePain is how many Pain wound deal to ped, it will multiply with PainMult of Weapon and BodyPart -->
			<BasePain Value="15"/>
			<!-- BasePain is base bleeding severity of wound, it will multiply with BleedingMult of Weapon and BodyPart -->
			<BaseBleeding Value="0.15"/>
			<!-- Chance to get CritWound for current Wound. 
			Chances of Weapon, BodyPart and wound is multiplies for get a final CritChance. -->
			<CritChance Value="0"/>
		</Wound>
		<Wound>
			<Uid Value="FLESH_GSW"/>
			<LocalizationKey Key="FLESH_GSW"/>
			<BaseDamage Value="10"/>
			<BasePain Value="20"/>
			<BaseBleeding Value="0.2"/>
		</Wound>
		<Wound>
			<Uid Value="PENETRATING_GSW"/>
			<LocalizationKey Key="PENETRATING_GSW"/>
			<BaseDamage Value="10"/>
			<BasePain Value="30"/>
			<BaseBleeding Value="0.25"/>
			<CritChance Value="0.3"/>
			<!-- It will create flash effect on screen, when player will get this wound -->
			<CreateFlash FadeIn="500" FadeOut="500"/>
		</Wound>
		<Wound>
			<Uid Value="PERFORATING_GSW"/>
			<LocalizationKey Key="PERFORATING_GSW"/>
			<BaseDamage Value="8"/>
			<BasePain Value="35"/>
			<BaseBleeding Value="0.3"/>
			<CritChance Value="0.4"/>
			<CreateFlash FadeIn="500" FadeOut="500"/>
			<!-- Ped will play PainSound, when it will get this wound -->
			<PlayPainSound Player="-1" Male="6" Female="6"/>
		</Wound>
		<Wound>
			<Uid Value="AVULSIVE_GSW"/>
			<LocalizationKey Key="AVULSIVE_GSW"/>
			<BaseDamage Value="15"/>
			<BasePain Value="40"/>
			<BaseBleeding Value="0.35"/>
			<CritChance Value="0.6"/>
			<CreateFlash FadeIn="1000" FadeOut="1000"/>
			<PlayPainSound Player="-1" Male="6" Female="6"/>
		</Wound>
		<Wound>
			<Uid Value="LIGHT_BRUISE"/>
			<LocalizationKey Key="LIGHT_BRUISE"/>
			<BaseDamage Value="3"/>
			<BasePain Value="15"/>
		</Wound>
		<Wound>
			<Uid Value="MEDIUM_BRUISE"/>
			<LocalizationKey Key="MEDIUM_BRUISE"/>
			<BaseDamage Value="5"/>
			<BasePain Value="25"/>
			<CritChance Value="0.2"/>
		</Wound>
		<Wound>
			<Uid Value="HEAVY_BRUISE"/>
			<LocalizationKey Key="HEAVY_BRUISE"/>
			<BaseDamage Value="10"/>
			<BasePain Value="35"/>
			<CritChance Value="0.4"/>
		</Wound>
		<Wound>
			<Uid Value="ABRASION_WOUND"/>
			<LocalizationKey Key="ABRASION_WOUND"/>
			<BaseDamage Value="3"/>
			<BasePain Value="15"/>
			<BaseBleeding Value="0.15"/>
		</Wound>
		<Wound>
			<Uid Value="INCISION_WOUND"/>
			<LocalizationKey Key="INCISION_WOUND"/>
			<BaseDamage Value="5"/>
			<BasePain Value="15"/>
			<BaseBleeding Value="0.25"/>
		</Wound>
		<Wound>
			<Uid Value="LACERATION_WOUND"/>
			<LocalizationKey Key="LACERATION_WOUND"/>
			<BaseDamage Value="10"/>
			<BasePain Value="25"/>
			<BaseBleeding Value="0.3"/>
			<CritChance Value="0.4"/>
		</Wound>
		<Wound>
			<Uid Value="STAB_WOUND"/>
			<LocalizationKey Key="STAB_WOUND"/>
			<BaseDamage Value="15"/>
			<BasePain Value="30"/>
			<BaseBleeding Value="0.35"/>
			<CritChance Value="0.8"/>
		</Wound>
	</WoundList>
</GswWoundConfig.xml>